<Window x:Class="My_Office_Word.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_Office_Word"
        mc:Ignorable="d"
        Title="Текстовый редактор для натуралов" Height="600" Width="1000">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать" Click="File_Create"></MenuItem>
                <MenuItem Header="Открыть" Click="File_Open"></MenuItem>
                <MenuItem Header="Сохранить" Click="File_Save"></MenuItem>
                <MenuItem Header="Сохранить как" Click="File_SaveAs"></MenuItem>
            </MenuItem>
        </Menu>
        <RichTextBox x:Name="TextBox"></RichTextBox>
    </DockPanel>
</Window>
